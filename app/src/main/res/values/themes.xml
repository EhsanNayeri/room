<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/onPrimaryText</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/txt_normal</item>
        <item name="materialAlertDialogTheme">@style/dialog</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/primaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="extendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:tint"> @color/surface </item>
        <item name="backgroundTint"> @color/surface </item>
        <item name="android:textColor">@color/onSurfaceText</item>
        <item name="android:padding">8dp</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fab">
        <item name="colorSecondary">@color/light</item>
        <item name="colorAccent">@color/light</item>
        <item name="colorOnPrimary">@color/light</item>
        <item name="colorOnSecondary">@color/primary</item>
    </style>

    <style name="input" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

    </style>

    <style name="dialog" parent="android:style/Theme.Material.Light.Dialog">
        <item name="android:layoutDirection">rtl</item>
    </style>

</resources>